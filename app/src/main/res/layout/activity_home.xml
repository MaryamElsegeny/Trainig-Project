<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/loginTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logoImg"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Login"
        android:layout_marginStart="27dp"
        android:textColor="@color/black"
        android:textSize="37sp"
        android:layout_marginTop="47dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginTxt"
        app:layout_constraintStart_toStartOf="@id/loginTxt"
        android:layout_marginTop="7dp"
        android:text="Enter to your personal profile.com and follow. "
        android:textSize="16dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/phoneNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTxt"
        app:layout_constraintStart_toStartOf="@id/descriptionTxt"
        android:layout_marginTop="17dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/phoneNumEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneNumTxt"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="7dp"
        android:hint="phone Number"
        android:background="@drawable/grey_border"
        android:textSize="16sp"
        android:padding="10dp"
        android:inputType="phone"
        />
    <TextView
        android:id="@+id/passwordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneNumEd"
        app:layout_constraintStart_toStartOf="@id/phoneNumEd"
        android:layout_marginTop="7dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textStyle="normal"
        />
    <EditText
        android:id="@+id/passwordEd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordTxt"
        app:layout_constraintStart_toStartOf="@id/phoneNumEd"
        app:layout_constraintEnd_toEndOf="@id/phoneNumEd"
        android:hint="password"
        android:background="@drawable/grey_border"
        android:padding="10dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordEd"
        android:layout_margin="45dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:padding="17dp"
        android:background="@drawable/blue_background"
        />


    <TextView
        android:id="@+id/dontHaveAccountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/loginBtn"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        android:text="Donâ€™t have an account yet?"
        android:layout_marginTop="47dp"
        android:layout_marginStart="36dp"
        android:textColor="@color/darkgrey"
        />

    <TextView
        android:id="@+id/signUpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dontHaveAccountTxt"
        app:layout_constraintStart_toEndOf="@id/dontHaveAccountTxt"
        app:layout_constraintBottom_toBottomOf="@id/dontHaveAccountTxt"
        android:text="Sign Up"
        android:textColor="@color/blue"
        android:layout_marginStart="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>